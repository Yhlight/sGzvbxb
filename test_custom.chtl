// 测试自定义元素和样式
[Custom] @Style button {
    display: inline-block;
    padding: 8px 16px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    
    &:hover {
        background-color: #0056b3;
    }
}

[Custom] @Element button {
    button {
        class: "custom-button";
        use @Style button;
        insert content;
    }
}

[Custom] @Var colors {
    primary: "#007bff";
    success: "#28a745";
    danger: "#dc3545";
}

// 使用自定义元素
div {
    use @Element button {
        text { "点击我" }
        onclick: "alert('Hello CHTL!')";
    }
    
    use @Element button {
        style {
            background-color: use @Var colors.success;
        }
        text { "成功按钮" }
    }
}