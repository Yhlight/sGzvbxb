{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CHTL Compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/chtlc",
            "args": [
                "${workspaceFolder}/examples/test.chtl",
                "-o",
                "${workspaceFolder}/examples/output.html"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build All",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true
            }
        },
        {
            "name": "Debug CHTL IDE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ide/build/bin/chtl-ide",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "QT_DEBUG_PLUGINS",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build IDE"
        },
        {
            "name": "Debug Current Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "CMake: Build All"
        },
        {
            "name": "LLDB: Debug CHTL Compiler",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/chtlc",
            "args": [
                "${workspaceFolder}/examples/test.chtl",
                "-o",
                "${workspaceFolder}/examples/output.html"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build All"
        },
        {
            "name": "Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "enter program name, for example ${workspaceFolder}/build/bin/chtlc",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        },
        {
            "name": "Run CHTL File (No Debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/chtlc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.html"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "CMake: Build All"
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": ["Debug CHTL Compiler", "Debug CHTL IDE"]
        }
    ]
}