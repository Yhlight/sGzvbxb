{
    // CMake配置
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.installPrefix": "${workspaceFolder}/install",
    "cmake.generator": "Unix Makefiles",
    "cmake.configureSettings": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
    },
    
    // C++配置
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 100 }",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.errorSquiggles": "enabled",
    
    // 文件关联
    "files.associations": {
        "*.chtl": "chtl",
        "*.g4": "antlr4",
        "*.cmod": "archive",
        "*.cjmod": "cpp",
        "CMakeLists.txt": "cmake",
        "*.cmake": "cmake"
    },
    
    // 文件排除
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/build": false,
        "**/generated": false
    },
    
    // 搜索排除
    "search.exclude": {
        "**/build": true,
        "**/generated": true,
        "**/node_modules": true,
        "**/*.cmod": true
    },
    
    // 编辑器配置
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [100],
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    
    // 终端配置
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.env.linux": {
        "PATH": "${workspaceFolder}/build/bin:${env:PATH}",
        "LD_LIBRARY_PATH": "${workspaceFolder}/build/lib:${env:LD_LIBRARY_PATH}"
    },
    
    // 调试配置
    "debug.onTaskErrors": "showErrors",
    
    // CHTL特定配置
    "[chtl]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.autoIndent": "full",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        // 禁用方括号自动补全，避免与CHTL的[]关键字冲突
        "editor.autoClosingBrackets": "never",
        "editor.autoSurround": "never",
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.showKeywords": true,
        "editor.suggest.insertMode": "replace"
    },
    
    // Git配置
    "git.autofetch": true,
    "git.confirmSync": false,
    
    // 工作区推荐
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons"
}