{
    "name": "chtl-language-support",
    "displayName": "CHTL Language Support",
    "description": "Language support for CHTL (C++ Hypertext Language)",
    "version": "0.1.0",
    "publisher": "chtl-project",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "keywords": [
        "chtl",
        "hypertext",
        "template",
        "web"
    ],
    "activationEvents": [
        "onLanguage:chtl"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "chtl",
            "aliases": ["CHTL", "chtl"],
            "extensions": [".chtl", ".cmod", ".cjmod"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "chtl",
            "scopeName": "source.chtl",
            "path": "./syntaxes/chtl.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "chtl",
                "path": "./snippets/chtl.json"
            }
        ],
        "commands": [
            {
                "command": "chtl.compile",
                "title": "CHTL: Compile Current File"
            },
            {
                "command": "chtl.preview",
                "title": "CHTL: Open Preview"
            },
            {
                "command": "chtl.format",
                "title": "CHTL: Format Document"
            }
        ],
        "configuration": {
            "title": "CHTL",
            "properties": {
                "chtl.compiler.path": {
                    "type": "string",
                    "default": "chtl",
                    "description": "Path to the CHTL compiler executable"
                },
                "chtl.compiler.outputDirectory": {
                    "type": "string",
                    "default": "./build",
                    "description": "Output directory for compiled files"
                },
                "chtl.compiler.sourceMap": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate source maps"
                },
                "chtl.compiler.optimization": {
                    "type": "string",
                    "enum": ["none", "basic", "full"],
                    "default": "basic",
                    "description": "Optimization level"
                },
                "chtl.compiler.parallel": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable parallel compilation"
                },
                "chtl.preview.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically refresh preview on save"
                },
                "chtl.format.indentSize": {
                    "type": "number",
                    "default": 4,
                    "description": "Number of spaces for indentation"
                }
            }
        },
        "keybindings": [
            {
                "command": "chtl.compile",
                "key": "ctrl+shift+b",
                "mac": "cmd+shift+b",
                "when": "resourceExtname == .chtl"
            },
            {
                "command": "chtl.preview",
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v",
                "when": "resourceExtname == .chtl"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceExtname == .chtl",
                    "command": "chtl.compile",
                    "group": "1_modification"
                },
                {
                    "when": "resourceExtname == .chtl",
                    "command": "chtl.preview",
                    "group": "2_preview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0"
    },
    "dependencies": {
        "child_process": "^1.0.2"
    }
}