// Chtholly Space子模块 - 提供间距和布局工具

[Custom] @Style SpaceUtilities {
    // 边距工具类
    .m-0 { margin: 0; }
    .m-1 { margin: 4px; }
    .m-2 { margin: 8px; }
    .m-3 { margin: 16px; }
    .m-4 { margin: 24px; }
    .m-5 { margin: 32px; }
    
    // 内边距工具类
    .p-0 { padding: 0; }
    .p-1 { padding: 4px; }
    .p-2 { padding: 8px; }
    .p-3 { padding: 16px; }
    .p-4 { padding: 24px; }
    .p-5 { padding: 32px; }
    
    // Flex布局
    .flex { display: flex; }
    .flex-row { flex-direction: row; }
    .flex-col { flex-direction: column; }
    .justify-start { justify-content: flex-start; }
    .justify-center { justify-content: center; }
    .justify-end { justify-content: flex-end; }
    .items-start { align-items: flex-start; }
    .items-center { align-items: center; }
    .items-end { align-items: flex-end; }
}

[Custom] @Element Spacer {
    div class="spacer" {
        style {
            flex: 1;
            min-height: 1px;
        }
    }
}

[Custom] @Var SpacingScale {
    xs: 4px;
    sm: 8px;
    md: 16px;
    lg: 24px;
    xl: 32px;
    xxl: 48px;
}