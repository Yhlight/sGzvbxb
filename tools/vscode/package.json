{
    "name": "chtl-language",
    "displayName": "CHTL Language Support",
    "description": "Complete language support for CHTL (C++ Hypertext Language)",
    "version": "1.0.0",
    "publisher": "chtl-team",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Linters"
    ],
    "keywords": [
        "chtl",
        "web",
        "html",
        "css",
        "javascript",
        "c++"
    ],
    "activationEvents": [
        "onLanguage:chtl"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "chtl",
            "aliases": ["CHTL", "chtl"],
            "extensions": [".chtl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "chtl",
            "scopeName": "source.chtl",
            "path": "./syntaxes/chtl.tmLanguage.json"
        }],
        "snippets": [{
            "language": "chtl",
            "path": "./snippets/chtl.json"
        }],
        "configuration": {
            "title": "CHTL",
            "properties": {
                "chtl.compiler.path": {
                    "type": "string",
                    "default": "chtl",
                    "description": "Path to CHTL compiler executable"
                },
                "chtl.format.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable CHTL formatting"
                },
                "chtl.format.indentSize": {
                    "type": "number",
                    "default": 4,
                    "description": "Number of spaces for indentation"
                },
                "chtl.lint.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable CHTL linting"
                },
                "chtl.autoComplete.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable auto-completion"
                },
                "chtl.hover.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable hover information"
                }
            }
        },
        "commands": [
            {
                "command": "chtl.compile",
                "title": "CHTL: Compile Current File"
            },
            {
                "command": "chtl.format",
                "title": "CHTL: Format Document"
            },
            {
                "command": "chtl.showPreview",
                "title": "CHTL: Show Preview"
            },
            {
                "command": "chtl.generateProject",
                "title": "CHTL: Generate New Project"
            }
        ],
        "keybindings": [
            {
                "command": "chtl.compile",
                "key": "ctrl+shift+b",
                "mac": "cmd+shift+b",
                "when": "editorTextFocus && resourceExtname == .chtl"
            },
            {
                "command": "chtl.format",
                "key": "shift+alt+f",
                "mac": "shift+option+f",
                "when": "editorTextFocus && resourceExtname == .chtl"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceExtname == .chtl",
                    "command": "chtl.compile",
                    "group": "1_modification"
                },
                {
                    "when": "resourceExtname == .chtl",
                    "command": "chtl.showPreview",
                    "group": "2_preview"
                }
            ]
        },
        "problemMatchers": [{
            "name": "chtl",
            "owner": "chtl",
            "fileLocation": ["relative", "${workspaceFolder}"],
            "pattern": {
                "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning):\\s+(.+)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }],
        "taskDefinitions": [{
            "type": "chtl",
            "required": ["task"],
            "properties": {
                "task": {
                    "type": "string",
                    "description": "The CHTL task to run"
                }
            }
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "^18.x",
        "typescript": "^4.9.0"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.0",
        "vscode-languageserver": "^8.0.0",
        "vscode-languageserver-textdocument": "^1.0.0"
    }
}