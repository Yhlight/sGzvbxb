// 测试无引号字面量
div {
    // text 块中的无引号字面量
    text { 这是一段没有引号的文本内容 }
    
    p {
        text { 
            CHTL 支持无引号字面量，
            让代码更简洁自然！
        }
    }
    
    // 带引号的文本
    span {
        text { "这是带双引号的文本" }
    }
    
    // 单引号文本
    span {
        text { '这是带单引号的文本' }
    }
}

// 属性值中的无引号字面量
button {
    // 无引号的属性值
    type: button;
    role: navigation;
    data-action: submit;
    
    // 数字也是无引号字面量
    tabindex: 0;
    width: 100;
    
    // 百分比
    size: 100%;
    
    // 颜色值
    color: #ff0000;
    background: rgb(255,0,0);
    
    text { 点击我 }
}

// 样式中的无引号字面量
div {
    style {
        // CSS 属性值大多是无引号的
        display: block;
        position: relative;
        margin: 10px auto;
        padding: 20px;
        
        // 字体
        font-family: Arial, sans-serif;
        font-size: 16px;
        font-weight: bold;
        
        // 颜色
        color: red;
        background-color: #f0f0f0;
        border: 1px solid black;
    }
    
    text { 样式中的无引号字面量 }
}

// 混合使用
article {
    title: "这是一篇文章";  // 带引号
    author: 张三;            // 无引号
    date: 2024-01-01;       // 无引号日期
    
    text { 
        作者：张三
        日期：2024年1月1日
    }
}