{
  "comments": {
    "lineComment": "--",
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "{{", "close": "}}" },
    { "open": "<!--", "close": "-->" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["{{", "}}"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\[\\w+\\]",
      "end": "^\\s*(?=\\[)"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "\\{[^}]*$|\\[[^\\]]*$",
    "decreaseIndentPattern": "^\\s*[}\\]]"
  }
}