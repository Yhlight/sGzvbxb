{
  "name": "chtl-language",
  "displayName": "CHTL Language Support",
  "description": "完整的CHTL语言支持，包括语法高亮、代码片段、智能提示、调试、格式化等功能",
  "version": "1.0.0",
  "publisher": "chtl-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Formatters"
  ],
  "keywords": [
    "chtl",
    "cmod",
    "cjmod",
    "template",
    "hypertext"
  ],
  "activationEvents": [
    "onLanguage:chtl",
    "workspaceContains:**/*.chtl",
    "workspaceContains:**/*.cmod",
    "workspaceContains:**/*.cjmod"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chtl",
        "aliases": ["CHTL", "chtl"],
        "extensions": [".chtl"],
        "configuration": "./language-configuration/chtl.json"
      },
      {
        "id": "cmod",
        "aliases": ["CMOD", "cmod"],
        "extensions": [".cmod"],
        "configuration": "./language-configuration/cmod.json"
      }
    ],
    "grammars": [
      {
        "language": "chtl",
        "scopeName": "source.chtl",
        "path": "./syntaxes/chtl.tmLanguage.json"
      },
      {
        "language": "cmod",
        "scopeName": "source.cmod",
        "path": "./syntaxes/cmod.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "chtl",
        "path": "./snippets/chtl.json"
      }
    ],
    "configuration": {
      "title": "CHTL",
      "properties": {
        "chtl.compiler.path": {
          "type": "string",
          "default": "chtlc",
          "description": "CHTL编译器路径"
        },
        "chtl.format.indentSize": {
          "type": "number",
          "default": 4,
          "description": "缩进大小"
        },
        "chtl.format.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "使用Tab缩进"
        },
        "chtl.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用实时语法验证"
        }
      }
    },
    "commands": [
      {
        "command": "chtl.compile",
        "title": "CHTL: 编译当前文件"
      },
      {
        "command": "chtl.compileAll",
        "title": "CHTL: 编译所有文件"
      },
      {
        "command": "chtl.packModule",
        "title": "CHTL: 打包模块"
      },
      {
        "command": "chtl.createTemplate",
        "title": "CHTL: 创建模板"
      },
      {
        "command": "chtl.createCustom",
        "title": "CHTL: 创建自定义组件"
      }
    ],
    "keybindings": [
      {
        "command": "chtl.compile",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceExtname == .chtl"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .chtl",
          "command": "chtl.compile",
          "group": "chtl"
        }
      ]
    },
    "problemMatchers": [
      {
        "name": "chtlc",
        "owner": "chtl",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "chtl",
        "properties": {
          "task": {
            "type": "string",
            "description": "要执行的任务"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}